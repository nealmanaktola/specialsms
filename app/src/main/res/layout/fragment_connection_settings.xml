<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.knowroaming.specialsms.activities.ConnectionActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="@string/tvAddress"
        android:id="@+id/tvAddress"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/etAddress"
        android:layout_below="@+id/tvAddress"
        android:layout_alignLeft="@+id/tvAddress"
        android:text="10.0.2.2"
        android:gravity="center"
        android:layout_alignEnd="@+id/tvAddress" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="@string/tvPort"
        android:id="@+id/tvPort"
        android:layout_marginTop="33dp"
        android:layout_below="@+id/etAddress"
        android:layout_centerHorizontal="true" />


    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/etPort"
        android:text="4444"
        android:gravity="center"
        android:layout_alignLeft="@+id/tvPort"
        android:layout_alignEnd="@+id/tvPort"
        android:layout_below="@+id/tvPort" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Connect"
        android:id="@+id/btnConnect"
        android:layout_below="@+id/etPort"
        android:layout_alignStart="@+id/etPort"
        android:layout_alignEnd="@+id/etPort" />

    <ProgressBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/progressBar"
        android:layout_below="@+id/btnConnect"
        android:layout_centerHorizontal="true"
        android:indeterminate="false"
        android:visibility="invisible" />

</RelativeLayout>
